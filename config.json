{
    "listeners": [
        {
            "address": "0.0.0.0",
            "port": 38081,
            "https": false
        }
        /*{
            "address": "0.0.0.0",
            "port": 443,
            "https": true,
            //cert,key: Cert file path and key file path, empty by default,
            //if empty, use the global setting
            "cert": "",
            "key": "",
            //use_old_tls: enable the TLS1.0/1.1, false by default
            "use_old_tls": false,
            "ssl_conf": [
                //["MinProtocol", "TLSv1.3"]
            ]
        }*/
    ],
    "app": {
        "number_of_threads": 0,
        "enable_session": false,
        "session_timeout": 0,
        "document_root": "public",
        "home_page": "index.html",
        "use_implicit_page": true,
        "implicit_page": "index.html",
        "upload_path": "uploads",
        "file_types": [
            "bmp",
            "gif",
            "png",
            "jpg",
            "jpeg",
            "svg",
            "ico",
            "icns",
            "js",
            "css",
            "html",
            "xml",
            "xsl",
            "txt",
            "swf",
            "xap",
            "apk",
            "cur",
            "ttf",
            "otf",
            "woff2",
            "woff",
            "eot"
        ],
        //locations: An array of locations of static files for GET requests.
        "locations": [
            {
                "default_content_type": "text/plain",
                "alias": "",
                "is_case_sensitive": false,
                "allow_all": true,
                "is_recursive": true,
                "filters": []
            }
        ],
        "max_connections": 100000,
        "max_connections_per_ip": 0,
        "load_dynamic_views": false,
        "dynamic_views_path": [
            "./views"
        ],
        "dynamic_views_output_path": "",
        "enable_unicode_escaping_in_json": true,
        "float_precision_in_json": {
            "precision": 0,
            "precision_type": "significant"
        },
        "log": {
            "log_path": "",
            "logfile_base_name": "",
            "log_size_limit": 100000000,
            "log_level": "DEBUG"
        },
        "run_as_daemon": false,
        "handle_sig_term": true,
        "relaunch_on_error": false,
        "use_sendfile": true,
        "use_gzip": true,
        "use_brotli": false,
        "static_files_cache_time": 5,
        "idle_connection_timeout": 60,
        "server_header_field": "Hephaestus/0.1.0b",
        "enable_server_header": true,
        "enable_date_header": true,
        "keepalive_requests": 0,
        "pipelining_requests": 0,
        "gzip_static": true,
        "br_static": true,
        "client_max_body_size": "1M",
        "client_max_memory_body_size": "64K",
        "client_max_websocket_message_size": "128K",
        "reuse_port": false
    },
    "plugins": [
        {
            "name": "hephaestus::plugins::HandlerManager",
            "config": {}
        },
        {
            "name": "hephaestus::plugins::Perfmon",
            "config": {
                "perfmon": {
                    "cpuInterval": 100,
                    "taskInterval": 5.0
                }
            }
        },
        {
            "name": "hephaestus::plugins::HidManager",
            "dependencies": ["hephaestus::plugins::HandlerManager"],
            "config": {
                "taskInterval": 5.0
            }
        },
        {
            "name": "hephaestus::plugins::LedManager",
            "dependencies": ["hephaestus::plugins::HidManager"],
            "config": {}
        }
    ],
    "custom_config": {}
}
